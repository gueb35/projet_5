{% extends 'baseVisitor.html.twig' %}

{% block title %}Page de connexion à l'espace d'administration !{% endblock %}

{% block body %}
<div class="loginMember">
    <h1 class="text-center">Connectez-vous à votre espace d'administration grâce au formulaire ci-dessous !</h1>
    <div class="formLoginMember">
        <form action="{{ path('security_login_admin') }}" method="post">
            <div class="form-group">
                <input placeholder="Adresse mail ..." required name="_username" type="text" class="form-control">
            </div>
            <div class="form-group">
                <input placeholder="Mot de passe ..." required name="_password" type="password" class="form-control">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success">Connexion !</button>
            </div>
        </form>
    </div>
</div>
{% endblock %}