{% extends 'baseUsers.html.twig' %}

{% block title %}Page d'accès à votre espace membre !{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">Authentifiez-vous grâce au formulaire ci-dessous !</h1>
    <label for="inputUsername" class="sr-only">Pseudo</label>
    <input type="text" value="{{ last_username }}" name="pseudo" id="inputUsername" class="form-control" placeholder="Entrez votre pseudo" autocomplete="off" required autofocus>
    <label for="inputPassword" class="sr-only">Mot de passe</label>
    <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Entrez votre mot de passe" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    
        {# Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html #}

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me">Se souvenir de moi
            </label>
        </div>
   

    <button class="btn btn-lg btn-primary" type="submit">
        Accéder à votre espace membre !
    </button>
</form>
{% endblock %}
