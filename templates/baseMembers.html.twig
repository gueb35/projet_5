        <link rel="stylesheet" href="../css/style.css">
        {% block stylesheets %}{% endblock %}
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark menu">
                    <div class="logo"></div>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarColor02">
                        <ul class="navbar-nav mr-auto">
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('visitor_home') }}">Accueil du site</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('my_compte') }}">Mon compte</a>
                            </li>
                            {% if app.user.basketType == 'composés' %}
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('basket_compouned') }}">Panier composé</a>
                                </li>
                                <!-- <div class="basket"> -->
                                    {% if app.user.numberBasketRest == '0' %}
                                        <div class="basketNoValidated"></div>
                                    {% else %}
                                        <div class="basketValidated"></div>
                                    {% endif %}
                                <!-- </div> -->
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('security_deconnect_member') }}">Déconnexion</a>
                                </li>
                            {% else %}
                                <li class="nav-item">
                                        <a class="nav-link" href="{{ path('security_deconnect_member') }}">Déconnexion</a>
                                </li>
                            {% endif %}
                        </ul>
                    </div>
                </nav>
    <!-- </head>
    <body> -->
        <div class="container">
            {% block body %}

            {% endblock %}
        </div>
        <div class="deco">
            <div class="rectangle"></div>
            <div class="triangle"></div>
        </div>
        {% block javascripts %}{% endblock %}
    </body>
</html>
