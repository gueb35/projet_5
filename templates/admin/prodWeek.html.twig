        {{ form_widget(formProdOfWeekUnity1.prodByUnity, {'attr' : {'placeholder': "Nom du produit no 1"}}) }}
        {{ form_widget(formProdOfWeekUnity1.quantityProdUnity, {'attr' : {'placeholder': "Nombre d'unité du produit no 1 (2 unités max)"}}) }}
